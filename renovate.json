{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "**/*.css"
      ],
      "matchStrings": [
        "@import url\\(\"https://cdnjs\\.cloudflare\\.com/ajax/libs/(?<depName>[^/]+)/(?<currentValue>[^/]+)/css/all\\.min\\.css\"\\);"
      ],
      "datasourceTemplate": "cdnjs",
      "versioningTemplate": "semver",
      "autoReplaceStringTemplate": "@import url(\"https://cdnjs.cloudflare.com/ajax/libs/{{depName}}/{{newValue}}/css/all.min.css\");"
    }
  ]
}
